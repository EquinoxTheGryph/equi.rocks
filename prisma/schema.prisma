generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Config {
  name String @id
  data Json   @db.Json

  @@index([name])
}

model File {
  id          String   @id @default(uuid()) @db.Uuid
  parent      String?  @db.Uuid
  name        String
  title       String
  description String?
  mimeType    String
  data        Bytes?
  metadata    Json?    @db.Json
  createdOn   DateTime @default(now())
  modifiedOn  DateTime

  @@index([id])
}

model Icon {
  name      String     @id
  data      String
  userLinks UserLink[] @relation("userLink_icon") @ignore

  @@index([name])
}

model UserLink {
  id        String       @id @default(uuid()) @db.Uuid
  title     String       @unique
  content   String
  link      String
  order     Int          @default(0)
  type      UserLinkType @default(LINK)
  icon      String?
  icon_data Icon?        @relation("userLink_icon", fields: [icon], references: [name])

  @@index([id])
}

enum UserLinkType {
  LINK
  TITLE
  DESCRIPTION
  CUSTOM
}
